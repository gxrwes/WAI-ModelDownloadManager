<Window x:Class="WAIModelDownloader.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Progress" Height="300" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Download Progress" FontWeight="Bold" Margin="0,0,0,10"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusTextBlock" Text="Status" Margin="0,0,0,10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                <TextBox x:Name="LogTextBox" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" Margin="0,0,0,10"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
